{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.less": "prettier",
  "vetur.format.defaultFormatter.sass": "sass-supremacy",
  "vetur.format.defaultFormatter.html": "prettyhtml",
  "vetur.format.defaultFormatterOptions": {
    "prettyhtml": {
      "printWidth": 120
    }
  },
  "eslint.options": {
    "extensions": [
      ".js",
      ".vue",
      ".ts",
      ".tsx"
    ]
  },
  // 以下为 sass 配置
  "sassSupremacy.insertColons": false, // 是否插入冒号
  "sassSupremacy.insertSemicolons": false, // 是否插入分好
  "sassSupremacy.insertBraces": false, // 是否插入大括号
  "sassSupremacy.insertNewLineAroundImports": false, // import之后是否换行
  "sassSupremacy.insertNewLineAroundBlocks": false
}
