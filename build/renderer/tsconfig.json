{
    "compilerOptions": {
        // 与 Vue 的浏览器支持保持一致
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": false,
        "strictFunctionTypes": false,
        "baseUrl": "src",
        "paths": {
            "@oldApi/*": [
                "../../src/renderer/bonade-im-part/src/business/*"
            ],
            "@IM/*": [
                "../../src/renderer/bonade-im-part/src/IM/*"
            ],
            "@/*": [
                "../../src/renderer/bonade-im-part/src"
            ],
            "@Config/*": [
                "../../src/renderer/bonade-im-part/src/config"
            ]
        }
    },
    "include": [
        "../../src/renderer/bonade-im-part/src"
    ],
    "exclude": [
        "../../node_modules",
        "../../src/renderer/bonade-im-part/node_modules"
    ]
}